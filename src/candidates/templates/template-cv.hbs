<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Curriculum Vitae</title>
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
      body { font-family: 'Roboto', sans-serif; color: #333; margin: 20px;
      padding: 0; background: #eaeaea; } .container { width: 95%; max-width:
      1000px; margin: 0 auto; background: #ffffff; padding: 20px; box-shadow: 0
      0 10px rgba(0, 0, 0, 0.1); } .header { text-align: center; padding-bottom:
      20px; border-bottom: 2px solid #555555; position: relative; } .avatar {
      position: absolute; top: 20px; left: 20px; width: 60px; height: 60px;
      border-radius: 50%; border: 2px solid #ffffff; background: #555555;
      overflow: hidden; } .avatar img { width: 100%; height: 100%; object-fit:
      cover; } .header h1 { margin: 10px 0 5px; font-size: 28px; color: #555555;
      } .header h2 { margin: 0; font-size: 18px; color: #777777; } .section {
      margin: 20px 0; } .section h2 { margin-bottom: 10px; font-size: 22px;
      color: #555555; border-bottom: 2px solid #555555; padding-bottom: 5px; }
      .section ul { list-style-type: none; padding: 0; } .section ul li {
      margin-bottom: 10px; padding: 10px; background: #f0f0f0; border: 1px solid
      #cccccc; border-radius: 5px; } .contact-info ul li { display:
      inline-block; margin-right: 20px; } .contact-info ul li::before { content:
      '•'; margin-right: 5px; color: #555555; } .skills-grid { display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); grid-gap:
      10px; } .skill-item { padding: 10px; background: #f0f0f0; border: 1px
      solid #cccccc; border-radius: 5px; } @media (max-width: 768px) { body {
      margin: 10px; } .container { padding: 10px; } .header { padding-bottom:
      10px; } .header h1 { font-size: 24px; } .header h2 { font-size: 16px; }
      .avatar { width: 50px; height: 50px; top: 10px; left: 10px; } .section h2
      { font-size: 18px; } .section ul li { padding: 8px; font-size: 14px; }
      .contact-info ul li { margin-right: 10px; } .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); } } @media
      (max-width: 480px) { .header h1 { font-size: 22px; } .header h2 {
      font-size: 14px; } .avatar { width: 40px; height: 40px; } .section h2 {
      font-size: 16px; } .section ul li { font-size: 12px; } .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); } }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        {{!-- <div class="avatar">
          <img src="{{profilePicture}}" alt="Profile Avatar" />
        </div> --}}
        <h1>{{fullName}}</h1>
        <h2>{{jobTitle}}</h2>
      </div>
      <div class='contact-info section'>
        <h2>Información de contacto</h2>
        <ul>
          <li>Correo: {{email}}</li>
          <li>Teléfono: {{phone}}</li>
          <li>Dirección: {{address}}</li>
        </ul>
      </div>
      <div class='technical-skills section'>
        <h2>Habilidades Técnicas</h2>
        <div class='skills-grid'>
          {{#each technicalSkills}}
            <div class='skill-item'>{{this.name}} ({{this.category}})</div>
          {{/each}}
        </div>
      </div>
      <div class='experience section'>
        <h2>Experiencia Profesional</h2>
        <ul>
          {{#each experience}}
            <li>
              <strong>{{this.company}}</strong><br />
              {{this.position}}
              ({{this.startDate}}
              -
              {{this.endDate}})<br />
              {{this.description}}
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='education section'>
        <h2>Educación Adquirida</h2>
        <ul>
          {{#each education}}
            <li>
              <strong>{{this.institution}}</strong><br />
              {{this.degree}}
              ({{this.startDate}}
              -
              {{this.endDate}})<br />
              {{this.description}}
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='certifications section'>
        <h2>Certificaciones</h2>
        <ul>
          {{#each certifications}}
            <li>
              <strong>{{this.nombreCertification}}</strong><br />
              {{this.type}}
              ({{this.startDate}}
              -
              {{this.endDate}})<br />
              {{this.nombreDeLaOrganizacion}}
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='recognitions section'>
        <h2>Reconocimientos</h2>
        <ul>
          {{#each recognitions}}
            <li>
              <strong>{{this.nombreCertification}}</strong><br />
              <span>Finalizo: </span>{{this.endDate}}<br />
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='languages section'>
        <h2>Idiomas Dominados</h2>
        <ul>
          {{#each languageSkills}}
            <li>{{this.language}} - {{this.level}}</li>
          {{/each}}
        </ul>
      </div>
      <div class='participations section'>
        <h2>Participaciones Destacables</h2>
        <ul>
          {{#each participations}}
            <li>{{this.Lugar}}, {{this.ciudad}} ({{this.LugarDelEvento}})</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </body>
</html>